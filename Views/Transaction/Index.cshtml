@model List<SpendWise.Models.Transaction>

@{
    ViewData["Title"] = "Transaction History";
}

<div class="text-center">
    <h1 class="display-4">Transaction History</h1>
    <p>
        <a asp-controller="Transaction" asp-action="Create" class="btn btn-primary">Add New Transaction</a>
    </p>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Date</th>
                <th>Amount</th>
                <th>Description</th>
                <th>Category</th>
                <th>Is Income</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var transaction in Model)
            {
                <tr>
                    <td>@transaction.TransactionDate.ToShortDateString()</td>
                    <td>@transaction.Amount.ToString("C")</td>
                    <td>@transaction.Description</td>
                    <td>@transaction.Category?.Name ?? "N/A"</td> <!-- Dodajemy ? aby uniknąć błędu, gdy Category jest null -->
                    <td>@(transaction.IsIncome ? "Income" : "Expense")</td>
                    <td>
                        <a asp-controller="Transaction" asp-action="Edit" asp-route-id="@transaction.Id" class="btn btn-sm btn-primary">Edit</a>
                        <a asp-controller="Transaction" asp-action="Delete" asp-route-id="@transaction.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
